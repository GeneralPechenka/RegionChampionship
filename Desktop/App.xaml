<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Desktop"
             x:Class="Desktop.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary Source="Resources/Styles/FlyoutStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Color x:Key="PrimaryBlue">#2E5BFF</Color>
            <Color x:Key="SuccessGreen">#00C851</Color>
            <Color x:Key="DarkGray">#333333</Color>
            <Color x:Key="MediumGray">#666666</Color>
            <Color x:Key="LightGray">#E0E0E0</Color>
            <Color x:Key="BackgroundGray">#F5F5F5</Color>
        </ResourceDictionary>
    </Application.Resources>
</Application>
